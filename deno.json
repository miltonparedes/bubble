{
  "nodeModulesDir": "auto",
  "workspace": [
    "./game",
    "./packages/game-logic",
    "./packages/ui",
    "./packages/assets",
    "./packages/db-types",
    "./tools/asset-generator",
    "./tools/content-generator"
  ],
  "imports": {
    "@bubble/logic": "./packages/game-logic/mod.ts",
    "@bubble/ui": "./packages/ui/mod.ts",
    "@bubble/assets": "./packages/assets/mod.ts",
    "@bubble/db": "./packages/db-types/mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "npm:react"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["no-unused-vars"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "**/dist",
    ".vite",
    "**/.vite",
    "game/src/routeTree.gen.ts"
  ],
  "tasks": {
    "dev": "cd game && deno run -A npm:vite dev --port 2022",
    "build": "cd game && deno run -A npm:vite build",
    "preview": "cd game && deno run -A npm:vite preview",
    "test": "cd game && deno run -A npm:vitest run",
    "test:watch": "cd game && deno run -A npm:vitest",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check packages/**/*.ts"
  }
}
